@model IEnumerable<Kurs>
<h2>Kurs Listesi</h2>
<a class="btn btn-primary" asp-controller="Kurs" asp-action="Create">Kurs Ekle</a>

<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:150px;">@Html.DisplayNameFor(m => m.KursId)</th>
            <th>@Html.DisplayNameFor(m => m.Baslik)</th>
            <th>@Html.DisplayNameFor(m => m.Ogretmen.AdSoyad)</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
               <td>@Html.DisplayFor(modelItem => item.KursId)</td>
               <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
               <th>@Html.DisplayFor(modelItem => item.Ogretmen.AdSoyad)</th>

               <td>
                   <a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Güncelle</a>
                   <a asp-controller="Kurs" asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Sil</a>
               </td>
            </tr>
        }
    </tbody>
</table>
